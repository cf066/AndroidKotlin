<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MatchMatch.background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mvp.view.fragment.GoodsDetailTabOneFragment">
    <com.youth.banner.Banner

        android:id="@+id/br_goods_detail_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_goods_desc"
        style="@style/MatchWrap"
        android:textColor="@color/text_normal"
        android:paddingLeft="@dimen/common_padding_middle"
        android:paddingRight="@dimen/common_padding_middle"
        android:paddingTop="@dimen/common_padding_middle"
        android:background="@drawable/border_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/br_goods_detail_banner"
        app:layout_constraintBottom_toTopOf="@+id/tv_goods_price"/>

    <TextView
        android:id="@+id/tv_goods_price"
        style="@style/MatchWrap"

        android:padding="@dimen/common_padding_middle"
        android:textColor="@color/common_red"
        android:textSize="@dimen/text_big_size"
        android:background="@drawable/border_bottom"
        app:layout_constraintTop_toBottomOf="@+id/tv_goods_desc"/>

    <RelativeLayout
        android:id="@+id/rl_sku_view"
        style="@style/MatchWrap"
        android:background="@drawable/border_all"
        android:layout_marginTop="@dimen/common_margin"
        android:padding="@dimen/common_padding_middle"
        app:layout_constraintTop_toBottomOf="@+id/tv_goods_price">
        <TextView
            android:id="@+id/tv_sku_label"
            style="@style/WrapWrap"
            android:textSize="@dimen/text_small_size"
            android:textColor="@color/text_dark"
            android:text="已选"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_sku_selected"
            style="@style/WrapWrap"
            android:textColor="@color/text_light_dark"
            android:text="8961蓝色，L,1件"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_sku_label"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_toLeftOf="@+id/iv_more"
            android:layout_marginRight="@dimen/common_margin"
            android:maxLines="1"
            android:ellipsize="end"/>
        <ImageView
            android:id="@+id/iv_more"
            style="@style/WrapWrap"
            android:src="@drawable/icon_gray_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>