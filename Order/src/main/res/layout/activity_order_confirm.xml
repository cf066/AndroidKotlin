<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Common">
    <com.kotlin.base.ui.widgets.HeaderToolBar
        android:id="@+id/mHeaderBar"
        style="@style/MatchWrap"
        app:titleText="订单确认"/>
    <TextView
        android:id="@+id/tv_select_ship"
        style="@style/MatchWrap"
        android:text="选择收货人"
        android:textColor="@color/text_light_dark"
        android:drawableRight="@drawable/icon_arrow"
        android:background="@drawable/border_all"
        android:padding="@dimen/common_padding"
        android:layout_below="@id/mHeaderBar"/>
    <RelativeLayout
        android:id="@+id/rl_ship_view"
        style="@style/MatchWrap"
        android:background="@drawable/border_all"
        android:paddingTop="@dimen/common_padding_middle"
        android:paddingBottom="@dimen/common_padding_middle"
        android:visibility="visible"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_below="@id/tv_select_ship">
        <TextView
            android:id="@+id/tv_ship_name"
            android:textSize="@dimen/text_big_size"
            android:textColor="@color/text_light_dark"
            android:background="@color/common_white"
            android:paddingLeft="@dimen/common_padding"
            android:paddingTop="@dimen/common_padding_small"
            android:paddingBottom="@dimen/common_padding_small"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/tv_ship_address"
            android:background="@null"
            android:paddingBottom="@dimen/common_padding_small"
            android:layout_below="@id/tv_ship_name"
            android:textSize="@dimen/text_small_size"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/common_padding"
            />
        <ImageView
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_order_goods_list"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_below="@id/rl_ship_view"
        style="@style/MatchMatch"/>
    <RelativeLayout
        android:background="@drawable/border_all"
        android:padding="@dimen/common_padding"
        style="@style/MatchWrap"
        android:layout_below="@id/rv_order_goods_list">
        <TextView
            style="@style/WrapWrap"
            android:text="支付配送"
            android:layout_centerVertical="true"/>
        <TextView
            style="@style/WrapWrap"
            android:text="在线支付\n快递运输"
            android:textColor="@color/text_light_dark"
            android:layout_alignParentRight="true"
            android:lineSpacingMultiplier="1.3"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mBottomView"
        style="@style/MatchWrap"
        android:background="@drawable/border_all"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_total_price"
            style="@style/WrapWrap"
            android:textColor="@color/common_red"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/btn_submit_order"
            style="@style/WrapWrap"
            android:text="提交订单"
            android:textSize="@dimen/text_big_size"
            android:textColor="@color/common_white"
            android:background="@color/common_red"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
