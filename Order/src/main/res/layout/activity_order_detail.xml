<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap.Vertical">
    <com.kotlin.base.ui.widgets.HeaderToolBar
        android:id="@+id/mHeaderBar"
        style="@style/MatchWrap"
        app:titleText="订单详情"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        style="@style/MatchWrap"
        android:textColor="@color/text_light_dark"
        android:background="@drawable/border_bottom_gray"
        android:paddingLeft="@dimen/common_margin"
        android:paddingTop="@dimen/common_margin"
        android:paddingBottom="@dimen/common_margin_small"
        android:text="配送信息"/>

    <LinearLayout
        style="@style/MatchWrap.Horizontal"
        android:minHeight="@dimen/common_line_height"
        android:background="@drawable/border_bottom"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_label_ship_name"
            android:text="收货人:"
            android:layout_marginRight="@dimen/common_margin"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/tv_content_ship_name"
            android:textColor="@color/text_light_dark"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap.Horizontal"
        android:minHeight="@dimen/common_line_height"
        android:background="@drawable/border_bottom"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_label_ship_mobile"
            android:text="收货电话:"
            android:layout_marginRight="@dimen/common_margin"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/tv_content_ship_mobile"
            android:textColor="@color/text_light_dark"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap.Horizontal"
        android:minHeight="@dimen/common_line_height"
        android:background="@drawable/border_bottom"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_label_ship_address"
            android:text="收货地址:"
            android:layout_marginRight="@dimen/common_margin"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/tv_content_ship_address"
            android:textColor="@color/text_light_dark"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        style="@style/MatchWrap.Horizontal"
        android:minHeight="@dimen/common_line_height"
        android:background="@drawable/border_bottom"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:gravity="center_vertical">
        <TextView

            android:text="配送方式:"
            android:layout_marginRight="@dimen/common_margin"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:text="快递运输"
            android:textColor="@color/text_light_dark"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>




    <TextView
        style="@style/MatchWrap"
        android:textColor="@color/text_light_dark"
        android:background="@drawable/border_bottom_gray"
        android:paddingLeft="@dimen/common_margin"
        android:paddingTop="@dimen/common_margin"
        android:paddingBottom="@dimen/common_margin_small"
        android:text="支付信息"/>

    <LinearLayout
        style="@style/MatchWrap.Horizontal"
        android:minHeight="@dimen/common_line_height"
        android:background="@drawable/border_bottom"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:gravity="center_vertical">
        <TextView

            android:text="支付类型:"
            android:layout_marginRight="@dimen/common_margin"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:text="在线支付"
            android:textColor="@color/text_light_dark"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        style="@style/MatchWrap.Horizontal"
        android:minHeight="@dimen/common_line_height"
        android:background="@drawable/border_bottom"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:gravity="center_vertical">
        <TextView

            android:text="支付方式:"
            android:layout_marginRight="@dimen/common_margin"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:text="支付宝支付"
            android:textColor="@color/text_light_dark"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap.Horizontal"
        android:minHeight="@dimen/common_line_height"
        android:background="@drawable/border_bottom"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:gravity="center_vertical">
        <TextView

            android:text="实付费用:"
            android:layout_marginRight="@dimen/common_margin"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/tv_content_ship_total_price"
            android:text="1000"
            android:textColor="@color/text_light_dark"
            android:textSize="@dimen/text_middle_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>


    <TextView
        style="@style/MatchWrap"
        android:textColor="@color/text_light_dark"
        android:gravity="center_vertical"
        android:background="@drawable/border_bottom"
        android:paddingLeft="@dimen/common_padding"
        android:paddingTop="@dimen/common_padding_small"
        android:paddingBottom="@dimen/common_padding_small"
        android:layout_marginTop="@dimen/common_margin"
        android:text="自营"
        android:drawableLeft="@drawable/icon_shop"
        android:drawablePadding="@dimen/common_padding_small"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_order_goods_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
</LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
