<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical.Common">
    <com.kotlin.base.ui.widgets.HeaderToolBar
        style="@style/MatchWrap"
        app:titleText="我的订单"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_order"
        style="@style/TabsStyle"
        app:tabIndicatorColor="@color/common_blue"
        app:tabBackground="@drawable/border_bottom"
        app:tabTextColor="@color/text_normal"
        app:tabSelectedTextColor="@color/common_blue"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_order_pager"
        style="@style/MatchWrap"/>
</LinearLayout>