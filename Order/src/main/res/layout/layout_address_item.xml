<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginBottom="@dimen/common_margin"
              style="@style/MatchWrap.Vertical">
    <TextView
        android:id="@+id/tv_ship_name"
        android:textSize="@dimen/text_small_size"
        android:background="@drawable/border_bottom"
        android:paddingLeft="@dimen/common_padding"
        android:gravity="center_vertical"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_ship_address"
        android:background="@drawable/border_bottom"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_small_size"
        android:paddingLeft="@dimen/common_padding"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
            style="@style/MatchWrap"
            android:background="@drawable/border_bottom"
            android:paddingLeft="@dimen/common_padding"
            android:paddingTop="@dimen/common_padding_middle"
            android:paddingRight="@dimen/common_padding"
            android:paddingBottom="@dimen/common_padding_middle">
        <TextView
                android:id="@+id/tv_set_default"
                style="@style/WrapWrap"
                android:background="@null"
                android:button="@null"
                android:text="设为默认"
                android:textColor="@color/text_normal"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/common_check_selector"
                android:drawablePadding="@dimen/common_padding_middle"
                android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/tv_edit"
                style="@style/WrapWrap"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/common_margin"
                android:text="@string/common_edit"
                android:textSize="@dimen/text_small_size"
                android:layout_toLeftOf="@+id/tv_delete"
                android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/tv_delete"
                style="@style/WrapWrap"
                android:gravity="center_vertical"
                android:text="@string/common_delete"
                android:textSize="@dimen/text_small_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
