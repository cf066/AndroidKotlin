<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/WrapWrap.Vertical"
                android:background="@drawable/border_all"
                android:padding="@dimen/common_padding">
    <ImageView
            android:id="@+id/iv_goods_icon"
            android:layout_width="@dimen/common_icon_width"
            android:layout_height="@dimen/common_icon_height"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"/>
    <TextView
            android:id="@+id/tv_goods_desc"
            style="@style/WrapWrap"
            android:textColor="@color/text_light_dark"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/common_margin"
            android:maxLines="1"
            android:layout_toRightOf="@id/iv_goods_icon"/>
    <TextView
            android:id="@+id/tv_goods_sku"
            style="@style/WrapWrap"
            android:textSize="@dimen/text_small_size"
            android:layout_marginTop="@dimen/common_margin_small"
            android:layout_below="@id/tv_goods_desc"
            android:layout_alignLeft="@id/tv_goods_desc"/>
    <TextView
            android:id="@+id/tv_goods_price"
            style="@style/MatchWrap"
            android:textColor="@color/common_red"
            android:layout_marginTop="@dimen/common_margin_small"
            android:layout_below="@id/tv_goods_sku"
            android:layout_alignLeft="@id/tv_goods_sku"/>
    <TextView
            android:id="@+id/tv_goods_count"
            style="@style/WrapWrap"
            android:textSize="@dimen/text_small_size"
            android:textColor="@color/text_dark"
            android:layout_alignTop="@id/tv_goods_price"
            android:layout_alignParentRight="true"/>
</RelativeLayout>
